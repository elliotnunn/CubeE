	# Hacky replacement for the lost "ParseFeatures"
	For Feature in {AvailableFeatures}
		Set Defines "{Defines} -d {Feature}=`Evaluate " {1} " =~ /≈ {Feature} ≈/`"
	End
	Set Defines "`Echo {Defines} | StreamEdit -e '•,∞ Replace /=1/ "=TRUE" -c ∞' -e '•,∞ Replace /=0/ "=FALSE" -c ∞'`"

	For Override in {2}

		If "{Override}" =~ /(≈)®1=(≈)®2/
			Set Name {®1}
			Set Value {®2}
		Else
			Set Name {Override}
			Set Value TRUE
		End

		If {Value} =~ /true/
			Set Value TRUE
		Else If {Value} =~ /false/
			Set Value FALSE
		End

		If "{Defines}" =~ /(≈)®3{Name}=[¬ ∂t]+(≈)®4/
			Set Defines "{®3} {Name}={Value} {®4}"
		Else
			Set Defines "{Defines} -d {Name}={Value}"
		End
	End

	Echo {Defines}

	Exit
